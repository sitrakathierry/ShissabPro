<style type="text/css">
    table.content-details {
        width: 100%
        border-collapse: collapse;
    }

    .content-details th {
        border: solid 1px #000000; 
        padding: 5px;
    }

    .text-center {
        text-align: center;
    }

    .content-details td {
        border: solid 1px #c0c0c0;
        padding: 5px; 
    }

    .text-right {
        text-align: right;
    }

    table {
        font-size: 12pt;
        font-family: times;
    }

    pre {
        font-family: times;
    }

    td p {
        width: 20%;
    }

    h1,h2,h3,h4,p {
    	word-wrap: break-word;
    }

    table {
    	border-collapse: collapse;
    }

    .f10{
    	font-size: 10pt;
    }

    .f14{
    	font-size: 14pt;
    }

    .f20{
    	font-size: 20pt;
    }

    .no-margin{
    	margin: 0;
    }

    .no-padding{
		padding: 0;
    }

    .b {
    	font-weight: bold;
    }

    h2{
    	font-size: 15pt;
    }

    p{
    	margin: 0;
    	padding: 0;
    }

    .bordered{
    	border: 1px solid #000;
    }

    h3 {
    	font-size: 14pt;
    }

    .th, .tf {
    	font-weight: bold;
    	text-transform: uppercase;
    }

    .th{
    	text-align: center;
    }

</style>

<page backtop="" backbottom="" backleft="5mm" backright="5mm"> 
    {% include('PdfBundle:Default:entete.html.twig') %}

    <table style="width:100%">
	    <tr>
	        <td class="text-center" style="width:100%">
	        	{% set type = '' %}
	        	{% if facture.type == 1 %}
	        	    {% set type = 'PROFORMA' %}
	        	{% else %}
	        	    {% set type = 'DEFINITIVE' %}
	        	{% endif %}

	            <h3>
	                <u>FACTURE {{type}} N° {{facture.formattedNum}}</u>
	            </h3>
	        </td>
	    </tr>
	    
	</table>

	<table style="width:100%; margin-top: 20px">
		<tr>
			<td style="width:20%" class="u b">CLIENT</td>
			<td style="width:80%; text-transform: uppercase;" class="dashed typo" >

	            {% if facture.client.statut == 1 %}
                    : {{facture.client.idClientMorale.nomSociete}}
                {% else %}
                    : {{facture.client.idClientPhysique.nom}}
                {% endif %}
			</td>
		</tr>
	    
	</table>

	<table style="width: 100%">
	    <tr>
	        <td style="width: 100%">
	            {{ facture.descr | raw }}
	        </td>
	    </tr>
	</table>

	<table style="width: 100%; border: solid 1px #000;margin-top:25px">
	    <tr>
	        <td class="th" style="width: 25%; border: solid 1px #000000;">DESIGNATION</td>
	        <td class="th" style="width: 25%; border: solid 1px #000000;">DUREE</td>
	        <td class="th" style="width: 25%; border: solid 1px #000000;">PRIX</td>
	        <td class="th" style="width: 25%; border: solid 1px #000000;">MONTANT TOTAL</td>
	    </tr>

		{% for detail in details %}
	        <tr>
		        <td class="" style="width: 25%; border: solid 1px #000000;">
		        	{% if detail.libre == 1%}
		        		{{detail.designation | raw}}
		        	{% else %}
		        		{{ detail.service.nom }}
		        	{% endif %}
		        </td>
		        <td class="" style="width: 25%; border: solid 1px #000000;">
		        	{{detail.periode}}
		        	
		        	{% if detail.duree == 1%}
		        		Heures
		        	{% endif %}

		        	{% if detail.duree == 2%}
		        		Jours
		        	{% endif %}

		        	{% if detail.duree == 3%}
		        		Mois
		        	{% endif %}

		        	{% if detail.duree == 4%}
		        		Années
		        	{% endif %}
		        </td>
		        <td class="text-right" style="width: 25%; border: solid 1px #000000;">
		        	{{detail.prix}}
		        </td>
		        <td class="text-right" style="width: 25%; border: solid 1px #000000;">
		        	{{detail.montant}}
		        </td>
	        </tr>
		{% endfor %}

	    <tr>
	        <td class="tf" style="width: 25%; border: solid 1px #000000;">Montant</td>
	        <td class="tf" style="width: 25%; border: solid 1px #000000;"></td>
	        <td class="tf" style="width: 25%; border: solid 1px #000000;"></td>
	        <td class="tf text-right" style="width: 25%; border: solid 1px #000000;">{{facture.montant}}</td>
	    </tr>
	    <tr>
	        <td class="tf" style="width: 25%; border: solid 1px #000000;text-align: left;">Remise(en %)</td>
	        <td class="tf" style="width: 25%; border: solid 1px #000000;"></td>
	        <td class="tf text-right" style="width: 25%; border: solid 1px #000000;">{{facture.remisePourcentage}}</td>
	        <td class="tf text-right" style="width: 25%; border: solid 1px #000000;">{{facture.remiseValeur}}</td>
	    </tr>
	    <tr>
	        <td class="tf" style="width: 25%; border: solid 1px #000000;text-align: left;">Total</td>
	        <td class="tf" style="width: 25%; border: solid 1px #000000;"></td>
	        <td class="tf" style="width: 25%; border: solid 1px #000000;"></td>
	        <td class="tf text-right" style="width: 25%; border: solid 1px #000000;">{{facture.total}}</td>
	    </tr>

	</table>

	<table style="width:100%; margin-top: 50px">
		<tr>
			<td style="width:80%">
				Arrêté la présente facture à la somme de <span id="somme" class="typo b" style="text-transform: uppercase;">{{facture.somme}}</span> 
			</td>
			<td style="width:20%">
			</td>
		</tr>
	    <tr>
	        <td style="width: 80%">
            </td>
	        <td style="width: 20%" class="text-center dashed typo">
	        	<br>
	        	<br>
	        	<br>
	             Le {{facture.date| date('d/m/Y')}}
	        </td>
	    </tr>
	</table>

	<table style="width:100%; margin-top: 20px">
		<tr>
			<td style="width:80%">
			</td>
			<td style="width:20%" class="text-center f10">
				POUR LA SOCIETE
			</td>
		</tr>
	</table>
</page>