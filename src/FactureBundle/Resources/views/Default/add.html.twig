{% extends 'base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
{% endblock  %}
{% block scripts %}
{{ parent() }}
  <script src="{{ asset('js/plugins/select2/select2.full.min.js') }}"></script>
  <script src="{{ asset('bundles/facture/js/add.js') }}"></script>
{% endblock %}
{% block contenu %}
<div class="wrapper wrapper-content">
{# {% if permissions.facture.create %} #}

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>
            Création facture
          </h5>
        </div>
        <div class="ibox-content">
          <form method="POST" action="{{ path('facture_save') }}" class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-2 control-label">FACTURE</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="f_type" required="">
                  <option value="1">PROFORMA</option>
                  <option value="2">DEFINITIVE</option>
                </select>
              </div>
            </div>
            
            <div class="form-group client_mac">
              <label class="col-sm-2 control-label">Client</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="f_client" id="f_client">
                  <option value=""></option>
                  {% if is_granted('ROLE_ADMIN') %}
                    {% for client in clients %}
                      {% if client.statut == 1%}
                        <option value="{{client.numPolice}}" data-police="{{client.formattedNum}}">
                          {{client.idClientMorale.nomSociete}}
                        </option>
                      {% else %}
                        <option value="{{client.numPolice}}" data-police="{{client.formattedNum}}">
                          {{client.idClientPhysique.nom}}
                        </option>
                      {% endif %}
                    {% endfor %}
                  {% else %}
                    {% for client in clients %}
                      {% if client.agence == userAgence.agence %}
                        {% if client.statut == 1%}
                          <option value="{{client.numPolice}}" data-police="{{client.formattedNum}}">
                            {{client.idClientMorale.nomSociete}}
                          </option>
                        {% else %}
                          <option value="{{client.numPolice}}" data-police="{{client.formattedNum}}">
                            {{client.idClientPhysique.nom}}
                          </option>
                        {% endif %}
                      {% endif %}
                    {% endfor %}
                  {% endif %}

                </select>
              </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <textarea id="descr" name="descr"></textarea>
                </div>
            </div>


            <div class="hr-line-dashed"></div>
            <table class="table table-bordered" id="table-fact-add">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">DESIGNATION</th>
                  <th scope="col">PRIX UNITAIRE</th>
                  <th scope="col">MONTANT TOTAL</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <tr data-id="0">
                  <td>
                    <div class="form-group">
                      <div class="col-sm-10">
                        <input type="text" class="form-control" name="f_designation[]" required="">
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="form-group">
                      <div class="col-sm-10">
                        <input type="number" class="form-control f_prix" name="f_prix[]" required="">
                      </div>
                    </div>
                  </td>
                  <td class="td-montant">
                    <div class="form-group">
                      <div class="col-sm-10">
                        <input type="number" class="form-control f_montant" name="f_montant[]" required="">
                      </div>
                    </div>
                  </td>
                  
                  <td>
                  </td>
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <th colspan="2">Montant</th>
                  <th>
                    <div class="form-group">
                      <div class="col-sm-10">
                        <input type="number" class="form-control" name="montant" id="montant" readonly="" value="0">
                      </div>
                    </div>
                    
                  </th>
                  <th>
                    <span class="btn-remove-row" data-id="0"><i class="fa fa-trash"></i></span>&nbsp;
                    <span class="btn-add-row" data-id="0"><i class="fa fa-plus"></i></span>
                  </th>
                </tr>
                <tr>
                  <th>Remise (en %)</th>
                  <th>
                    <div class="form-group">
                      <div class="col-sm-10">
                        <input type="number" class="form-control" id="f_remise" name="f_remise" required="" value="0">
                      </div>
                    </div>
                  </th>
                  <th id="">
                    <div class="form-group">
                      <div class="col-sm-10">
                        <input type="number" class="form-control" name="remise" id="remise" readonly="" value="0">
                      </div>
                    </div>
                  </th>
                  <th>
                  </th>
                </tr>
                <tr>
                  <th colspan="2">Total</th>
                  <th id="">
                    <div class="form-group">
                      <div class="col-sm-10">
                        <input type="number" class="form-control" name="total" id="total" readonly="" value="0">
                      </div>
                    </div>
                  </th>
                  <th>
                  </th>
                </tr>
              </tfoot>
            </table>
            <div class="hr-line-dashed"></div>
            <p>Arrêté la présente facture à la somme de <b id="somme" style="text-transform: uppercase;"></b> 
            <p>
            <div class="row">
              <div class="col-lg-6 col-lg-push-6">
                <div class="form-group" id="data_1">
                  <label class="font-noraml">Moroni le</label>
                  <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" class="form-control" name="f_date" value="" required="">
                  </div>
                </div>
              </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-white" type="submit">
                <i class="fa fa-times"></i>
                Annuler
                </button>
                <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Enregistrer
                </button>
              </div>
            </div>
            <input type="hidden" name="" id="id-row" value="0">
            <input type="hidden" name="somme" id="id-somme" value="0">
          </form>
        </div>
      </div>
    </div>
  </div>
{#   {% else %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <h1 style="text-align: center;"> 
                        <i class="fa fa-lock"></i>
                        ACTION NON PERMIS
                    </h1>
                </div>
            </div>
        </div>
    </div>
{% endif %} #}
</div>
{% endblock %}
