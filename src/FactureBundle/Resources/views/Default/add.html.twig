{% extends 'base.html.twig' %}
{% block stylesheets %}
  {{ parent() }}
{% endblock  %}
{% block scripts %}
{{ parent() }}
  <script src="{{ asset('js/plugins/select2/select2.full.min.js') }}"></script>
  <script src="{{ asset('bundles/facture/js/add.js') }}"></script>
  <script src="{{ asset('bundles/facture/js/facture-produit-add.js') }}"></script>
  <script src="{{ asset('bundles/facture/js/facture-service-add.js') }}"></script>
{% endblock %}
{% block contenu %}
<div class="wrapper wrapper-content">
{# {% if permissions.facture.create %} #}

  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>
            Cr√©ation facture
          </h5>
        </div>
        <div class="ibox-content">
          <form method="POST" action="{{ path('facture_save') }}" class="form-horizontal" id="form-facture">

            <div class="form-group">
              <label class="col-sm-2 control-label">MODELE</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="f_model" id="f_model" required="">
                  <option value=""></option>
                  <option value="1">PRODUIT</option>
                  <option value="2">SERVICE</option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">FACTURE</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="f_type" required="">
                  <option value="1">PROFORMA</option>
                  <option value="2">DEFINITIVE</option>
                </select>
              </div>
            </div>

            <div class="form-group client_mac">
              <label class="col-sm-2 control-label">Client</label>
              <div class="col-sm-10">
                <select class="form-control m-b" name="f_client" id="f_client">
                  <option value=""></option>
                  {% if is_granted('ROLE_ADMIN') %}
                    {% for client in clients %}
                      {% if client.statut == 1%}
                        <option value="{{client.numPolice}}" data-police="{{client.formattedNum}}">
                          {{client.idClientMorale.nomSociete}}
                        </option>
                      {% else %}
                        <option value="{{client.numPolice}}" data-police="{{client.formattedNum}}">
                          {{client.idClientPhysique.nom}}
                        </option>
                      {% endif %}
                    {% endfor %}
                  {% else %}
                    {% for client in clients %}
                      {% if client.agence == userAgence.agence %}
                        {% if client.statut == 1%}
                          <option value="{{client.numPolice}}" data-police="{{client.formattedNum}}">
                            {{client.idClientMorale.nomSociete}}
                          </option>
                        {% else %}
                          <option value="{{client.numPolice}}" data-police="{{client.formattedNum}}">
                            {{client.idClientPhysique.nom}}
                          </option>
                        {% endif %}
                      {% endif %}
                    {% endfor %}
                  {% endif %}

                </select>
              </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <textarea id="descr" name="descr"></textarea>
                </div>
            </div>

            <div id="form-produit" class="hidden">
                {% include('FactureBundle:FactureProduit:form.html.twig') %}
            </div>

            <div id="form-service" class="hidden">
                {% include('FactureBundle:FactureService:form.html.twig') %}
            </div>
            
            
            <div class="row">
              <div class="col-lg-6 col-lg-push-6">
                <div class="form-group" id="data_1">
                  <label class="font-noraml">Moroni le</label>
                  <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" class="form-control" name="f_date" value="" required="">
                  </div>
                </div>
              </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-white" type="submit">
                <i class="fa fa-times"></i>
                Annuler
                </button>
                <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Enregistrer
                </button>
              </div>
            </div>
            <input type="hidden" name="" id="id-row" value="0">
            <input type="hidden" name="" id="id-row-service" value="0">
            <input type="hidden" name="somme" id="id-somme" value="0">
            <input type="hidden" name="somme" id="id-somme-service" value="0">
          </form>
        </div>
      </div>
    </div>
  </div>
{#   {% else %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <h1 style="text-align: center;"> 
                        <i class="fa fa-lock"></i>
                        ACTION NON PERMIS
                    </h1>
                </div>
            </div>
        </div>
    </div>
{% endif %} #}
</div>
{% endblock %}
