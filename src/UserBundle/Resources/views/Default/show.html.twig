{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
 {% endblock  %}

{% block contenu %}
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>
                            {{ user.username|upper }}
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <form method="POST" action="{{ path('user_save') }}" class="form-horizontal" id="user-form">

                            <input type="hidden" name="u_id" id="u_id" value="{{ user.id }}">

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Type de compte</label>
                                        <div class="col-sm-10">
                                            <select class="form-control m-b type" name="u_role">
                                                <option value=""></option>
                                                <option 
                                                    value="ROLE_SUPER_ADMIN"
                                                    {% if "ROLE_SUPER_ADMIN" in user.roles %}
                                                        selected="" 
                                                    {% endif %}
                                                >
                                                    SUPER ADMIN
                                                </option>
                                                <option 
                                                    value="ROLE_ADMIN"
                                                    {% if "ROLE_ADMIN" in user.roles %}
                                                        selected="" 
                                                    {% endif %}
                                                >
                                                    UTILISATEUR SHISSAB
                                                </option>
                                                <option 
                                                    value="ROLE_RESPONSABLE"
                                                    {% if "ROLE_RESPONSABLE" in user.roles %}
                                                        selected="" 
                                                    {% endif %}
                                                >
                                                    RESPONSABLE AGENCE
                                                </option>
                                                <option 
                                                    value="ROLE_AGENT"
                                                    {% if "ROLE_AGENT" in user.roles %}
                                                        selected="" 
                                                    {% endif %}
                                                >
                                                    AGENT
                                                </option>
                                                
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                {% if agent %}
                                    <div class="col-lg-6 type_med">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Agence</label>
                                            <div class="col-sm-10">
                                                <select class="form-control u_agence" name="u_agence">
                                                    <option></option>
                                                    {% for agence in agences %}
                                                        <option 
                                                            value="{{agence.id}}"
                                                            {% if agent.agence.id == agence.id %}
                                                                selected=""
                                                            {%endif%}
                                                        >{{agence.nom}}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}

                                
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label nom">Nom d'utilisateur</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="u_nom" value="{{ user.username }}" required="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Actif</label>
                                        <div class="col-sm-10">
                                            {% if user.enabled == 1 %}
                                                <input type="checkbox" id="js-switch" checked="" name="u_status"/>
                                            {% else %}
                                                <input type="checkbox" id="js-switch" name="u_status"/>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Email</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="u_email" value="{{ user.email }}">
                                        </div>
                                    </div>
                                </div>
                                {% if agent %}
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Responsabilité</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="u_responsable" required="" value="{{ agent.responsable }}">
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="row hidden">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Mot de passe</label>
                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" name="u_pass" value="{{ user.plainPassword }}">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <!-- <button class="btn btn-white" type="reset">Annuler</button> -->
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-save"></i>
                                        Enregistrer
                                    </button>
                                    <button class="btn btn-danger demo4" data-action="{{ path('user_delete', {id: user.id }) }}">
                                        <i class="fa fa-trash"></i>
                                        Supprimer
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/user/js/add.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            var elem = document.querySelector('#js-switch');
            var switchery = new Switchery(elem, { color: '#1AB394' });
        });

        $('.demo4').click(function (event) {
            event.preventDefault();
            var action = $(this).data('action');
            swal({
                title: "Êtes-vous sûr?",
                text: "Voulez-vous vraiment Supprimer l'utilisateur",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Oui, supprimez-le!",
                cancelButtonText: "Non, annulez",
                closeOnConfirm: false,
                closeOnCancel: false },
                function (isConfirm) {
                    if (isConfirm) {
                        window.location.href = action;
                    } else {
                        swal("Annulé", "La suppression à été annulé", "error");
                    }
                });
        });
    </script>
{% endblock %}